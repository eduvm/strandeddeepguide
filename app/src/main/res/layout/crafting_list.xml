<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity"
              android:background="@drawable/background"
              android:orientation="vertical"
              android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CRUDE KNIFE"
                android:id="@+id/btnCrudeKnife"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CRUDE AXE"
                android:id="@+id/btnCrudeAxe"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CRUDE HAMMER"
                android:id="@+id/btnCrudeHammer"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CRUDE SPEAR"
                android:id="@+id/btnCrudeSpear"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CAMPFIRE"
                android:id="@+id/btnCampFire"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FIRE PIT"
                android:id="@+id/btnFirePit"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FIRE SPIT"
                android:id="@+id/btnFireSpit"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FOUNDATION"
                android:id="@+id/btnFoundation"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="RAFT"
                android:id="@+id/btnRaft"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="BOAT MOTOR"
                android:id="@+id/btnBoatMotor"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SUPPORTS"
                android:id="@+id/btnSupports"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="WALL"
                android:id="@+id/btnWall"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ROOF"
                android:id="@+id/btnRoof"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="STEPS"
                android:id="@+id/btnSteps"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="BED"
                android:id="@+id/btnBed"
                android:onClick="onClickFeature"
                android:background="@drawable/custom_btn_black_pearl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

        </LinearLayout>


    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0">
    </com.google.android.gms.ads.AdView>


</LinearLayout>
